<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarSize="100dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ProductReview"
        android:padding="15dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:text="@string/top_5_reviews1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/top_prod_reviews"
                android:layout_gravity="center"
                android:textSize = "20sp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ProdReview_lay"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:id="@+id/ProdReview1"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginBottom="20dp">


                <TextView
                    android:text="@string/ProductName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Product1"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType=""
                    android:ems="10"
                    android:id="@+id/ReviewText1"
                    android:text="@string/prod_review1"
                    android:gravity="top"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:id="@+id/ProdReview2"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">


                <TextView
                    android:text="@string/ProductName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Product2"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType=""
                    android:ems="10"
                    android:id="@+id/ReviewText2"
                    android:text="@string/prod_review1"
                    android:gravity="top"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ProdReview3"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginBottom="20dp">


                <TextView
                    android:text="@string/ProductName3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Product3"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType=""
                    android:ems="10"
                    android:id="@+id/ReviewText3"
                    android:text="@string/prod_review3"
                    android:gravity="top" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ProdReview4"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginBottom="20dp">


                <TextView
                    android:text="@string/ProductName4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Product4"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType=""
                    android:ems="10"
                    android:id="@+id/ReviewText4"
                    android:text="@string/prod_review4"
                    android:gravity="top" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/ProdReview5"
                android:layout_marginBottom="20dp">

                <TextView
                    android:text="@string/ProductName5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Product5"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType=""
                    android:ems="10"
                    android:id="@+id/ReviewText"
                    android:text="@string/prod_review5"
                    android:gravity="top" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp">

            <Button
                android:text="@string/See_All_Reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/all_reviews"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                style="?android:attr/buttonBarButtonStyle"
                 />

            <Button
                android:text="@string/Write_Review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/write_review"
                android:layout_gravity="bottom|end"
                android:layout_weight="1"
                android:onClick="OnClick"
                style="?android:attr/buttonBarButtonStyle"
                />

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>